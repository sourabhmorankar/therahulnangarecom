rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(portfolioId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/portfolios/$(portfolioId)).data.ownerId == request.auth.uid;
    }
    
    // Users collection
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isAdmin();
    }
    
    // Portfolios collection
    match /portfolios/{portfolioId} {
      allow read: if resource.data.settings.isPublic == true || 
                     (isAuthenticated() && isOwner(portfolioId));
      allow write: if isAuthenticated() && isAdmin() && isOwner(portfolioId);
      
      // Cards subcollection
      match /cards/{cardId} {
        allow read: if get(/databases/$(database)/documents/portfolios/$(portfolioId)).data.settings.isPublic == true ||
                       (isAuthenticated() && isOwner(portfolioId));
        allow write: if isAuthenticated() && isAdmin() && isOwner(portfolioId);
      }
      
      // Assets subcollection
      match /assets/{assetId} {
        allow read: if get(/databases/$(database)/documents/portfolios/$(portfolioId)).data.settings.isPublic == true ||
                       (isAuthenticated() && isOwner(portfolioId));
        allow write: if isAuthenticated() && isAdmin() && isOwner(portfolioId);
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}